      <option value="RJ">COM_PM_SIC_REQUESTS_COUNTRY_STATE_OPTION_RJ</option>
      <option value="RN">COM_PM_SIC_REQUESTS_COUNTRY_STATE_OPTION_RN</option>
      <option value="RS">COM_PM_SIC_REQUESTS_COUNTRY_STATE_OPTION_RS</option>
      <option value="RO">COM_PM_SIC_REQUESTS_COUNTRY_STATE_OPTION_RO</option>
      <option value="RR">COM_PM_SIC_REQUESTS_COUNTRY_STATE_OPTION_RR</option>
