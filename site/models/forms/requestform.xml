    <field name="cep" filter="safehtml" type="text" class="pm-status-cep" required="true" message="Please fill the CEP" label="COM_PM_SIC_FORM_LBL_REQUEST_CEP" description="COM_PM_SIC_FORM_DESC_REQUEST_CEP" hint="COM_PM_SIC_FORM_LBL_REQUEST_CEP"/>
