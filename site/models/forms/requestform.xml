      <option value="DF">COM_PM_SIC_REQUESTS_COUNTRY_STATE_OPTION_DF</option>
      <option value="ES">COM_PM_SIC_REQUESTS_COUNTRY_STATE_OPTION_ES</option>
      <option value="GO">COM_PM_SIC_REQUESTS_COUNTRY_STATE_OPTION_GO</option>
      <option value="MA">COM_PM_SIC_REQUESTS_COUNTRY_STATE_OPTION_MA</option>
      <option value="MT">COM_PM_SIC_REQUESTS_COUNTRY_STATE_OPTION_MT</option>
      <option value="MS">COM_PM_SIC_REQUESTS_COUNTRY_STATE_OPTION_MS</option>
      <option value="MG">COM_PM_SIC_REQUESTS_COUNTRY_STATE_OPTION_MG</option>
      <option value="PA">COM_PM_SIC_REQUESTS_COUNTRY_STATE_OPTION_PA</option>
      <option value="PB">COM_PM_SIC_REQUESTS_COUNTRY_STATE_OPTION_PB</option>
      <option value="PR">COM_PM_SIC_REQUESTS_COUNTRY_STATE_OPTION_PR</option>
      <option value="PE">COM_PM_SIC_REQUESTS_COUNTRY_STATE_OPTION_PE</option>
