    <field name="country_state" type="list" class="pm-status-country-state" required="true" message="Please fill the Country State/Country Province" label="COM_PM_SIC_FORM_LBL_REQUEST_COUNTRY_STATE" description="COM_PM_SIC_FORM_DESC_REQUEST_COUNTRY_STATE" hint="COM_PM_SIC_FORM_LBL_REQUEST_COUNTRY_STATE">
